fuego=False
def comprar():
    dinero=3.0
    dinero=dinero-5000
    #(Mucha inflación)
    print("Saldo actual: " + str(dinero) + "€")
    return("Güevo")
def cascar(x):
    x=x+" cascao"
    print(x)
def sarten(x):
    x=x+" en sarten"
    print(x)
def encender(x):
    x=True
def aceitar(x):
    print("sonido de aceite*")
def servir(x):
    x=x+ " (ya no en sartén) en plato pa come (:"
    print(x)
def hacer_huevo_frito():
    huevo=comprar()
    cascar(huevo)
    sarten(huevo)
    encender(fuego)
    for y in range (1,20):
        aceitar(huevo)
    servir(huevo)
hacer_huevo_frito()
