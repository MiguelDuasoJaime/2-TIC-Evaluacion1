import random
def cribir(lista):
    result=""
    for x in lista:
        result=result+x
    return(result)
palabrassss=["corcho","pedro","macarrones","butano","terrorismo","nuez"]
pal=palabrassss[random.randint(0,5)]
letras=[]
huecos=[]
for l in pal:
    letras.append(pal)
for x in letras:
    huecos.append("_ ")
print("La palabra es: [" + cribir(huecos) +"] (" +str(len(huecos))+ " letras)")
