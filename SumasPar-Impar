#20 nums, sumamos pares por un lado e impares por otro
import random
sumapar=0
sumaimpar=0
for c in range(1,21):
    try:
        n = int(input("Dime el numero " +str(c)+ ": "))
    except:
        n= random.randint(-512,513)
        print("Pues lo elijo yo. Ale, pues es "+ str(n))
    if n%2 == 0:
        sumapar+=n
    else:
        sumaimpar+=n
print("Los pares suman: " + str(sumapar))
print("Los impares suman: " + str(sumaimpar))
